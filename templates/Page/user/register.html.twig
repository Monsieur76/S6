{% extends 'base.html.twig' %}
{% block title 'Inscription' %}
{% block body %}
    <div class="container" style="text-align: center;">
        <div class="row" style="justify-content: center;margin-top: 50px;color: whitesmoke">
            <div class="col-lg-4">
                {{ form_start(form) }}
                <h1 class="h2 mb-4 font-weight-normal" style="color: whitesmoke">Inscription</h1>
                <div class="col-lg-12">
                    {{ form_row (form.firstName) }}
                </div>
                <div class="col-lg-12">
                    {{ form_row(form.email) }}
                </div>

                <div class="col-lg-12">
                    {{ form_row(form.password) }}
                </div>
                <div class="col-lg-12">
                    {{ form_row(form.img) }}
                </div>
                <div class="col-md-12">
                    <a href="{{ path('login') }}" style="color: #C5D86D">Vous avez d√©ja un compte ?</a>
                </div>
                <div class="row" style="justify-content: center;margin-top: 20px">
                    <div class="col-lg-12">
                    <button type="submit" class="btn">{{ button|default('Enregistrer') }}</button>
                    </div>
                </div>
                {{ form_end (form) }}
            </div>
        </div>
    </div>
{% endblock %}